---
import Layout from "./Layout.astro";
import Navigation from "../components/Navigation.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <Navigation />
  <header>
    <Header />
  </header>
  <main>
    <slot />
  </main>
</Layout>

<style>
  main {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    main {
      padding: 0 2rem;
    }
  }
</style>
